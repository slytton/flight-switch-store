<div id='adminpage'>

  <div id='adminmenu'>
    <div class='menuitem' id='adminproducts'>
      Products
    </div>
    <div class='menuitem' id='adminorders'>
      Orders
    </div>
    <div class='menuitem' id='adminusers'>
      Users
    </div>
  </div>

  <div id='admindisplay'>

    <div id='productsshow'>
      <form><a href="admin/product/add"><input type="button" value="Add Product"></a></form>
      {{#shirts}}
      <h3>ID: {{id}}</h3>
      <h3>Name: {{designs.name}}</h3>
      <h3>Color: {{colors.color}}</h3>
      <h3>Size: {{sizes.size}}</h3>
      <form action="/admin/product/{{id}}" method="post">
        <table>
          <tbody>
            <tr><td>Image</td><td><img style='width: 10%' src="{{shirtImageUrl.url}}"></td></tr>
            <tr><td>quantity</td><td><input size='40%' type='text' name='quantity'value='{{quantity}}'></td></tr>
            <tr><td>price</td><td><input size='40%' type='text' name='price'value='{{price}}'></td></tr>
            <tr><td>shirt_image_url_id</td><td><input size='40%' type='text' name='shirt_image_url_id'value='{{shirt_image_url_id}}'></td></tr>
            <tr><td>shirtImageUrl.url</td>
              <td><select name='imageurls'>
                {{#../images}}
                <option {{#equal id ../shirt_image_url_id}}selected='true'{{/equal}} value='{{id}}'>{{url}}</option>
                {{/../images}}</select></td></tr>
                <tr><td></td><td><input type="submit" value="Submit"><a href="/product/{{id}}/delete"><input type="button" value="Delete"></a></td></tr>
              </tbody>
            </table>
          </form>
          {{/shirts}}
        </div>

        <div id='ordersshow'>
          <a href="/admin/orders/add"><input type="button" value="Add Order"></a>
          {{#orders}}
          <h3>Order ID: {{id}}</h3>
          <h3>User ID: {{user_id}}</h3>
          <h3>Created At: {{created_at}}</h3>
          <h3>Updated At: {{updated_at}}</h3>
          <form action="/admin/orders/{{id}}" method="post">
            <table>
              <tbody>
                <tr><td>user_id</td><td><input size='40%' type='text' value='{{user_id}}' name='user_id'></td></tr>
                <tr><td>address</td><td><input size='40%' type='text' value='{{address}}' name='address'></td></tr>
                <tr><td>city</td><td><input size='40%' type='text' value='{{city}}' name='city'></td></tr>
                <tr><td>state</td><td><input size='40%' type='text' value='{{state}}' name='state'></td></tr>
                <tr><td>zip</td><td><input size='40%' type='text' value='{{zip}}' name='zip'></td></tr>
                <tr><td>order_status_id</td><td><input size='40%' type='text' value='{{order_status_id}}' name='order_status_id'></td></tr>
                <tr><td></td><td><input type="submit" value="Submit"><a href="/admin/orders/{{id}}/delete"><input type="button" value="Delete"></a></td></tr>
              </tbody>
            </table>
          </form>
          {{/orders}}
        </div>

        <div id='usersshow'>
          <a href="/admin/users/add"><input type="button" value="Add User"></a>
          {{#users}}
          <h3>User ID: {{id}}</h3>
          <h3>User Email: {{email}}</h3>
          <form action="/admin/users/{{id}}" method="post">
            <table>
              <tbody>
                <tr><td>fname: {{fname}}</td><td><input type='text' value='{{fname}}'></td></tr>
                <tr><td>lname: {{lname}}</td><td><input type='text' value='{{lname}}'></td></tr>
                <tr><td>email: </td><td><input type='text' value='{{email}}'></td></tr>
                <tr><td>admin: </td><td><label>True<input type='radio' name='isadmin' value=true {{#if admin}}checked='checked'{{/if}}></label> <label>False<input type='radio' name='isadmin' value=false {{#unless admin}}checked='checked'{{/unless}}></td></tr>
                  <tr><td></td><td><input type="submit" value="Submit"><a href="/admin/users/{{id}}/delete"><input type="button" value="Delete"></a></td></tr>
                </tbody>
              </table>
            </form>
            {{/users}}
          </div>

        </div>

      </div>
