<div id='singleshirtpage'>

  <div class='halfpage'>
    <img class='shirtimg' src="{{shirt.0.shirtImageUrl.url}}" />
  </div>

  <div class='halfpage' id="selections">
    <h3 id="price" >${{shirt.0.price}} ea</h3>
      <form  action="/cart" method="post">
        <label>Size: </label>
        <select id="sz" name="shirt_id">
          {{#shirt}}
          {{#if quantity}}
          <option value="{{id}}">{{sizes.size}}</option>
          {{/if}}
          {{/shirt}}
        </select>
        <label>Qty: </label><input id="qty" type="text" name="quantity" value="1">

        <br>
        <input class="button single-view" id="add-to-cart" type="submit" value="Add to Cart"><br>
        <a href="/checkout"><input id="" class="single-view button blue" type="button" value="Checkout"></a>
      </form>

  </div>

</div>
